* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    --primaryColour: hsl(83, 33%, 66%);
    --secondaryColour: hsl(60, 100%, 97.1%);
    --accentColour: hsl(354, 43%, 78%);

    --primaryFont: "Open Sans";
    --secondaryFont: "Roboto";

    --navbar-height: 85px;
}

nav {
    display: flex;
    justify-content: space-around;
    align-items: center;

    height: var(--navbar-height);
    background-color: var(--secondaryColour);

    font-family: var(--primaryFont), sans-serif;
}

/* NAV LINKS */
.nav-links {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 35%;
}


.nav-links li {
    display: flex;
    justify-content: center;

    list-style: none;
    cursor: pointer;
    position: relative;
}

.nav-links a {
    margin: 0 8px;
    padding: 20px 0;
    vertical-align: middle;
    color: var(--accentColour);
    text-decoration: none;
    text-align: center;
    font-weight: bold;
    letter-spacing: 1px;
}

.nav-links > li {
    position: relative;
}

.nav-links > li > a::before {
    content: "";
    display: block;

    height: 3px;
    width: 90%;
    border-radius: 5px;

    background-color: var(--accentColour);

    position: absolute;
    left: 57%;
    bottom: 15px;
    transform: translateX(-50%) scaleX(0);
    transform-origin: 43% 50%;
    transition: transform 250ms;
}

.nav-links > li > a:hover::before {
    transform: translateX(-57%) scaleX(1);
}

/* NAV BURGER */
.nav-burger {
    display: none;
}

.nav-burger div {
    background-color: var(--accentColour);
    width: 25px;
    height: 3px;
    margin: 5px;
    border-radius: 5px;
}

/* NAV EXPANDABLE LIST */
.nav-expandable-list > ul {
    display: none;
}

.nav-expandable-list > a::after {
    content: "\f107";
    padding-left: 5px;
    font-family: FontAwesome, sans-serif;
    font-style: normal;
    font-weight: normal;
    color: var(--primaryColour);
}

.nav-expandable-list:hover > ul {
    display: flex;
    flex-direction: column;
    align-items: flex-start;

    position: absolute;
    top: 50px;
    left: 0;

    width: 200%;

    background-color: var(--secondaryColour);

    border-radius: 5px;
    letter-spacing: 0;
}

.nav-expandable-list:hover > ul > li > a {
    padding: 10px;
    color: var(--primaryColour);
}


/* Mid width size screen */
@media screen and (max-width: 1250px) {
    .nav-links {
        width: 56.5%;
    }

    .nav-links a {
        margin: 0 8px;
        color: var(--accentColour);
        text-decoration: none;
        font-weight: bold;
        letter-spacing: 1px;
    }
}

/* Smartphone */
@media screen and (max-width: 768px) {
    body {
        overflow-x: hidden;
    }

    /* NAV LINKS */
    .nav-links {
        position: absolute;
        right: 0;
        top: var(--navbar-height);

        width: 100%;
        height: calc(100vh - var(--navbar-height));

        background-color: var(--secondaryColour);

        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;

        transform: translateX(100%);
        transition: transform 0.5s ease-in;
    }

    .nav-links > * {
        padding: 10px;
    }

    .nav-links li {
        display: block;
    }

    .nav-links > li {
        opacity: 0;
        transform: translateX(50px);
    }


    .nav-links a {
        padding: 0;
    }

    .nav-links-active {
        transform: translateX(0%);
        transition: transform 0.5s ease-in;
    }

    .nav-links > li > a::before {
        content: "";
        display: none;
    }


    /* NAV BURGER ICON */
    .nav-burger {
        display: block;
        cursor: pointer;
    }

    .nav-burger > div:nth-child(1) {
        transition: transform 0.5s;
    }

    .nav-burger > div:nth-child(2) {
        transition: transform 0.5s;
    }

    .nav-burger > div:nth-child(3) {
        transition: transform 0.5s;
    }

    .nav-burger-active > div:nth-child(1) {
        transform: rotate(45deg) translate(6px, 5px);
        transition: transform 0.5s;
    }

    .nav-burger-active > div:nth-child(2) {
        background-color: transparent;
        box-shadow: none;
        transform: translateX(-20px);
        transition: all 0.5s;
    }

    .nav-burger-active > div:nth-child(3) {
        transform: rotate(-45deg) translate(6px, -6px);
        transition: transform 0.5s;
    }


    /* NAV EXPANDABLE LIST */
    .nav-expandable-list > ul {
        display: flex;
        flex-direction: column;

        margin-left: 2vw;
        margin-top: 5px;

        max-height: 0;

        transform: scale(1, 0);
        transform-origin: top;

        transition-property: max-height, transform;
        transition-duration: 400ms;
        transition-timing-function: ease-in-out;
    }

    .nav-expandable-list-active > ul {
        max-height: 100vh;

        transform: scale(1, 1);
        transform-origin: top;

        transition-property: max-height, transform;
        transition-duration: 400ms;
        transition-timing-function: ease-in-out;
    }

    .nav-expandable-list-active > a:after {
        content: "\f106";
    }

    .nav-expandable-list > ul > li > a {
        color: var(--primaryColour);
    }

    .nav-expandable-list:hover > ul > li > a {
        padding: initial;
    }

    .nav-expandable-list:hover > ul {
        position: initial;
        background-color: initial;
    }
}

@keyframes navLinkFade {
    from {
        opacity: 0;
        transform: translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateX(0px);
    }
}



